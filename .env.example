# ============================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================

# ============================================
# SERVER CONFIGURATION
# ============================================

# Flask Settings
FLASK_ENV=production
FLASK_DEBUG=False
FLASK_SECRET_KEY=REPLACE_WITH_RANDOM_32_BYTE_BASE64_KEY

# Server Network
HOST=0.0.0.0
PORT=5000

# ============================================
# ENCRYPTION KEYS
# ============================================
# CRITICAL: Generate these using the script below
# Run: python -c "import os, base64; print('AES_SECRET_KEY=' + base64.b64encode(os.urandom(32)).decode())"

AES_SECRET_KEY=REPLACE_WITH_RANDOM_32_BYTE_BASE64_KEY
AES_IV=REPLACE_WITH_RANDOM_16_BYTE_BASE64_KEY

# ============================================
# AUTHENTICATION
# ============================================
# TODO: Replace with database authentication in production

ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=REPLACE_WITH_BCRYPT_HASH

# Generate password hash:
# python -c "from werkzeug.security import generate_password_hash; print(generate_password_hash('your_password'))"

# ============================================
# DATABASE (Optional - for production scale)
# ============================================

# PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/fleet_db

# MongoDB
# MONGODB_URI=mongodb://localhost:27017/fleet_db

# Redis (for session management)
# REDIS_URL=redis://localhost:6379/0

# ============================================
# VEHICLE CLIENT CONFIGURATION
# ============================================

# Server Connection
SERVER_URL=http://192.168.1.100:5000

# Unique Vehicle ID (must match server's CARS dictionary)
ACS_ID=ACS01

# ============================================
# GPS HARDWARE CONFIGURATION
# ============================================

# Serial Port
GPS_PORT=/dev/ttyACM0

# Baud Rate (common: 9600, 38400, 115200)
GPS_BAUDRATE=38400

# Read Timeout (seconds)
GPS_TIMEOUT=1

# Fallback Position (used when GPS unavailable)
FALLBACK_LAT=17.5947
FALLBACK_LON=78.1230

# ============================================
# MONITORING & LOGGING
# ============================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log File Path
LOG_FILE=./logs/fleet.log

# Enable Telemetry
ENABLE_TELEMETRY=true

# ============================================
# PERFORMANCE TUNING
# ============================================

# GPS Update Interval (seconds) - affects network traffic
GPS_UPDATE_INTERVAL=0.2

# Command Poll Interval (seconds)
COMMAND_POLL_INTERVAL=0.2

# Max Vehicles (for memory allocation)
MAX_VEHICLES=100

# ============================================
# SECURITY SETTINGS
# ============================================

# Session Timeout (seconds)
SESSION_TIMEOUT=3600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================

# Email Notifications (for alerts)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# ALERT_EMAIL=admin@your-domain.com

# SMS Notifications (Twilio)
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890
# ALERT_PHONE=+1234567890

# Cloud Storage (for logs)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_S3_BUCKET=fleet-logs

# ============================================
# FEATURE FLAGS
# ============================================

ENABLE_WEB_DASHBOARD=true
ENABLE_ADMIN_PANEL=true
ENABLE_API=true
ENABLE_TELEMETRY_LOGGING=false
ENABLE_GEOFENCING=false

# ============================================
# DEVELOPMENT SETTINGS (remove in production)
# ============================================

# Development Mode
# DEV_MODE=true
# MOCK_GPS_DATA=false
# ENABLE_DEBUG_ENDPOINTS=false

# ============================================
# NOTES
# ============================================
# 1. Generate all keys using strong random generators
# 2. Never commit this file to version control
# 3. Use different keys for each environment (dev, staging, prod)
# 4. Backup keys securely (encrypted vault, KMS, etc.)
# 5. Rotate keys periodically for security
# 6. Limit access to this file (chmod 600 .env)
